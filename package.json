{
	"name": "figma-github-data",
	"version": "1.0.0",
	"description": "Populate data from GitHub into Figma mocks",
	"license": "MIT",
	"scripts": {
		"build": "/usr/local/bin/node node_modules/.bin/webpack --mode=production",
		"build:watch": "/usr/local/bin/node node_modules/.bin/webpack --mode=development --watch",
		"prettier:format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,json}' "
	},
	"dependencies": {
		"eslint": "^6.6.0",
		"fuse.js": "^3.4.5",
		"react": "^16.13.0",
		"react-dom": "^16.13.0",
		"rebass": "^4.0.5",
		"styled-components": "^4.3.2"
	},
	"devDependencies": {
		"@types/react": "^16.9.23",
		"@types/react-dom": "^16.9.5",
		"css-loader": "^3.4.2",
		"html-webpack-inline-source-plugin": "^0.0.10",
		"html-webpack-plugin": "^3.2.0",
		"husky": "^4.2.3",
		"lint-staged": "^10.0.8",
		"prettier": "^1.19.1",
		"style-loader": "^1.1.3",
		"ts-loader": "^6.2.1",
		"tslint": "^5.20.1",
		"typescript": "^3.8.2",
		"tslint-react": "^4.2.0",
		"url-loader": "^3.0.0",
		"webpack": "^4.41.6",
		"webpack-cli": "^3.3.11"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx,css,json}": [
			"prettier --write",
			"git add"
		]
	}
}
