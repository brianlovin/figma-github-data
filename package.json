{
  "name": "figma-github-data",
  "version": "1.0.0",
  "description": "Populate data from GitHub into Figma mocks",
  "license": "MIT",
  "scripts": {
    "build": "/usr/local/bin/node node_modules/.bin/webpack --mode=production",
    "build:watch": "/usr/local/bin/node node_modules/.bin/webpack --mode=development --watch",
    "prettier:format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,json}' ",
    "test": "jest"
  },
  "dependencies": {
    "eslint": "^7.31.0",
    "fuse.js": "^6.4.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rebass": "^4.0.5",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "css-loader": "^6.2.0",
    "html-webpack-inline-source-plugin": "^1.0.0-beta.2",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "style-loader": "^3.2.1",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.2.5",
    "tslint": "^5.20.1",
    "tslint-react": "^4.2.0",
    "typescript": "^4.3.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.46.0",
    "webpack-cli": "^4.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
