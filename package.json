{
  "name": "figma-github-data",
  "version": "1.0.0",
  "description": "Populate data from GitHub into Figma mocks",
  "license": "MIT",
  "scripts": {
    "build": "/usr/local/bin/node node_modules/.bin/webpack --mode=production",
    "build:watch": "/usr/local/bin/node node_modules/.bin/webpack --mode=development --watch",
    "prettier:format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,json}' ",
    "test": "jest"
  },
  "dependencies": {
    "eslint": "^7.12.1",
    "fuse.js": "^6.4.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rebass": "^4.0.5",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "css-loader": "^5.0.0",
    "html-webpack-inline-source-plugin": "^1.0.0-beta.2",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.7",
    "tslint": "^5.20.1",
    "tslint-react": "^4.2.0",
    "typescript": "^4.0.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.2.0",
    "webpack-cli": "^4.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
